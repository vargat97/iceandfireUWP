<Page x:Class="Iceandfire.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Iceandfire.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:Iceandfire.ViewModels" mc:Ignorable="d">

    <Page.DataContext>
        <vm:MainPageViewModel x:Name="MainPageVM"/>
    </Page.DataContext>

    <Grid>

        <NavigationView x:Name="NavView" ItemInvoked="NavView_ItemInvoked">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Bookmarks" Content="Books" Tag="books"/>
                <NavigationViewItemSeparator/>
                <NavigationViewItem Icon="People" Content="Characters" Tag="characters"/>
                <NavigationViewItemSeparator/>
                <NavigationViewItem Icon="Home" Content="Houses" Tag="houses"/>
                <NavigationViewItemSeparator/>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame">
                
            </Frame>


        </NavigationView>

    </Grid>


</Page>
